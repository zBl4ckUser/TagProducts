generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id          String      @id @default(uuid())
  nome        String
  descricao   String
  imagem      String?
  preco       Decimal @db.Decimal(15, 2) // O ideal seria utilizar dois campos do tipo Int, um para a parte inteira e outra para a parte decimal 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
